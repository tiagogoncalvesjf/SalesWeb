@model SalesWebMVC.Models.Seller


@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="BirthDate"></label>
                <input class="form-control" asp-for="BirthDate" />
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Salary"></label>
                <input class="form-control" asp-for="Salary" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>

        </form>
    </div>
</div>